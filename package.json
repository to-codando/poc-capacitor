{
	"name": "AppHello",
	"version": "1.0.0",
	"description": "",
	"main": "./src/main.js",
	"precise-watcher": {
		"src": [
			{
				"pattern": [
					"./src/**/*"
				],
				"callNext": "parallel",
				"on": "change",
				"run": [
					{
						"cmd": "pnpm",
						"args": [
							"dev"
						]
					},
					{
						"cmd": "pnpm",
						"args": [
							"copy"
						]
					},
					{
						"cmd": "pnpm",
						"args": [
							"lint"
						]
					}
				]
			}
		]
	},
	"standard": {
		"ignore": [
			"/node_modules",
			"/dist",
			"/android",
			".idea",
			"esbuild.config.js"
		]
	},
	"scripts": {
		"lint": "pnpm standard --fix",
		"copy": "shx cp ./index.html ./dist/index.html",
		"watch": "pnpm precise-watcher",
		"dev": "cross-env NODE_ENV=development node ./esbuild.config.js",
		"build": "cross-env NODE_ENV=production node ./esbuild.config.js",
		"start": "pnpm run dev && pnpm copy & pnpm run watch & npx http-server dist",
		"prod": "pnpm run build && pnpm copy",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@capacitor/cli": "^3.5.1",
		"cross-env": "^7.0.3",
		"esbuild": "^0.14.39",
		"http-server": "^14.1.0",
		"precise-watcher": "^2.1.0",
		"shx": "^0.3.4",
		"standard": "^17.0.0"
	},
	"dependencies": {
		"@capacitor/android": "^3.5.1",
		"@capacitor/core": "^3.5.1",
		"lemejs": "^6.0.7"
	}
}
